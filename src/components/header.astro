---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import Link from "../components/link.astro";
import Logo from "../../public/logo-sv-white.png";

const links = [
{ link: "/", text: "inicio" },
{ link: "/projects", text: "projectos" },
{ link: "/about", text: "sobre mi" },
{ link: "/contact", text: "contacto" },
];
---

<script src="../scripts/navbar.ts"></script>
<header class="flex bg-background fixed z-50 w-full sm:px-44 md:pt-8 justify-between sm:pb-4">
    <div class="flex items-center">
        <Image loading="eager" class="h-5 w-5" src={Logo} alt="logo simon-villalon" />
        <a class="text-lg font-bold sm:text-base" href="https://github.com/SimonVillalonIT" target="_blank">Sim√≥n</a>
    </div>
    <nav class="hidden w-fit sm:flex sm:gap-8">
        {links.map((l) =>
        <Link {...l} />)}
    </nav>
    <div class="flex sm:hidden">
        <Icon id="open" name="menu" class="text-gray-800 h-4 w-4 cursor-pointer" />
        <Icon id="close" name="close" class="text-gray-800 hidden h-4 w-4 cursor-pointer" />
        <nav id="menu"
            class="fixed left-0 top-16 z-40 mt-6 flex h-full w-full translate-x-[100vw] flex-col gap-6 bg-background px-2 pt-4 transition-transform">
            {links.map((l) =>
            <Link {...l} />)}
            <div class="flex h-full items-center justify-evenly">
                <a target="_blank" href="https://www.linkedin.com/in/simon-villalon">
                    <Icon name="Linkedin" />
                </a>
                <a target="_blank" href="https://github.com/SimonVillalonIT">
                    <Icon name="Github" />
                </a>
            </div>
            <a target="_blank" href="https://twitter.com/simonvillalon4">
                <Icon name="Twitter" />
            </a>
        </nav>
    </div>
</header>
