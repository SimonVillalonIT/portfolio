---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import Link from "../components/link.astro";
import Logo from "../../public/logo-sv-white.png";

const links = [
  { link: "/", text: "inicio" },
  { link: "/projects", text: "projectos" },
  { link: "/about", text: "sobre mi" },
  { link: "/contact", text: "contacto" },
];
---

<script src="../scripts/navbar.ts"></script>
<header
  class="fixed z-40 flex w-full justify-between bg-background p-3 text-white lg:px-44 lg:pb-4"
  title="Barra de navegación"
>
  <div class="flex items-center">
    <Image
      loading="eager"
      class="h-5 w-5"
      src={Logo}
      alt="logo simon-villalon"
    />
    <a
      class="text-lg font-bold lg:text-base"
      href="https://github.com/SimonVillalonIT"
      target="_blank">Simón</a
    >
  </div>
  <nav class="hidden w-fit lg:flex lg:gap-8">
    {links.map((l) => <Link {...l} />)}
  </nav>
  <div class="flex w-full items-center justify-end lg:hidden lg:pr-16">
    <Icon
      id="open"
      name="menu"
      class="text-gray-800 h-4 w-4 cursor-pointer"
      ó
      <Icon
      id="close"
      name="close"
      class="text-gray-800 hidden h-4 w-4 cursor-pointer"
    />
    <nav
      id="menu"
      class="fixed left-0 top-4 z-40 mt-6 flex h-full w-full translate-x-[100vw] flex-col gap-6 bg-background px-8 py-16 transition-transform"
    >
      {links.map((l) => <Link {...l} />)}
      <div class="flex h-full items-end justify-evenly pb-8">
        <a
          class="text-7xl"
          target="_blank"
          href="https://www.linkedin.com/in/simon-villalon"
        >
          <Icon name="Linkedin" />
        </a>
        <a
          class="col-start-3 text-7xl"
          target="_blank"
          href="https://github.com/SimonVillalonIT"
        >
          <Icon name="Github" />
        </a>
        <a
          class="text-7xl"
          target="_blank"
          href="https://twitter.com/simonvillalon4"
        >
          <Icon name="Twitter" />
        </a>
      </div>
    </nav>
  </div>
</header>
