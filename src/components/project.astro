---
import { Image } from "astro:assets";
import Button from "./button.astro";

const { title, description, technologies, image, href } = Astro.props;
---

<div class="flex h-full w-full flex-col border border-gray">
  <div class="row-span-2 border-b border-gray">
    <Image loading="eager" alt={title} src={image} />
  </div>
  <div class="border-b border-gray p-2 text-base font-light text-gray">
    <p>{technologies?.join(" ")}</p>
  </div>
  <div class="row-span-2 p-2">
    <h4>{title}</h4>
    <p class="text-gray">{description}</p>
    <Button href={href} text="Ver despliegue <~>" />
  </div>
</div>
